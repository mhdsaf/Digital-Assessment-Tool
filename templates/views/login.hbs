  <div class="container w-50 mt-5">
    <a class="font-weight-bold" style="color: #DF3939;"href="#"><i class="fa fa-sticky-note-o" style="color: #DF3939" aria-hidden="true"></i> &nbspJotDown</a>
    <hr/>
    <h3>Signup</h3>
    <form class="mt-3">
      <div class="form-group">
        <input class="form-control form-control-lg" type="text" id="username1" placeholder="Username" required>
      </div>
    <div class="form-group">
      <input class="form-control form-control-lg" type="email" id="email1" placeholder="Email" required>
    </div>
    <div class="form-group">
      <input class="form-control form-control-lg" type="password" id="password1" placeholder="Password" required>
      <small class="form-text text-muted">Minimum of 6 characters</small>
    </div>
    <div class="form-group">
      <input class="form-control form-control-lg" type="password" id="password2" placeholder="Confirm Password" required>
    </div>
    <button class="btn btn-block border border-white" id="submit" style="background-color: #DF3939; font-weight: 700">Submit</button>
    <br>
    </form>
    <div class="alert alert-danger" id="alertmsg">
      <strong>Error</strong> <span id="error"></span>
    </div>
    <div class="alert alert-success" id="alertmsg1">
      <strong>Error</strong> <span id="error1"></span>
    </div>
    <a href="/home" id="homepage"></a>
  </div>
